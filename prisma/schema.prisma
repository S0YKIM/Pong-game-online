// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model member {
	name		String		@id @db.VarChar(20)
	email		String		@db.VarChar(50)
	intraId		String		@db.VarChar(20)
	avartar		String		@db.VarChar(100)
	status		Int			@default(1)
	win			Int			@default(0)
	lose		Int			@default(0)
	level		Int			@default(0)
	score		Int			@default(1000)
	achieve		Int			@default(0)
	socket		Int			@default(-1)
	twoFactor	Boolean		@default(false)
	history		history[]
}

model history{
	id			Int			@id @default(autoincrement())
	player		String?
	scoreA		Int?
	scoreB		Int?
	option		Int?
	result		Boolean		@default(false)
	date		DateTime	@default(now())
	member_name	member 		@relation(fields: [name], references: [name])
	name		String

}

model channel{
	name		String		@unique @id
	passwd		String?	
	property	Int			@default(0)
	list		ch_users[]
}

model ch_users{
	id			Int			@id @default(autoincrement())
	user_name	String		@unique @db.VarChar(20)
	user_fd		Int			@unique
	property	Int			@default(0)
	mute		DateTime?	
	channel		channel 	@relation(fields: [chName], references: [name])
	chName	String	
}